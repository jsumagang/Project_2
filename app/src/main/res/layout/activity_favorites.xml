<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavoritesActivity">

    <TextView
        android:layout_width="400dp"
        android:layout_height="100dp"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="80dp"
        android:text="Favorite mon"
        android:textSize="30sp"
        android:id="@+id/FavoritePokemonTitle"
        app:layout_constraintTop_toBottomOf="@id/favHomeButton"/>

    <Button
        android:id="@+id/favHomeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dexButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dex"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/favHomeButton"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>